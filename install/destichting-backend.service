[Unit]
Description=deStichting Backend API
After=network.target

[Service]
Type=simple
EnvironmentFile=/etc/destichting/backend.env
WorkingDirectory=/opt/destichting/backend
ExecStart=/usr/bin/node /opt/destichting/backend/src/server.js
Restart=always
User=www-data
Group=www-data
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
